<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.app2016"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.Aware"
        tools:replace="android:icon, android:theme">

        <service
            android:name="com.aware.Applications"
            android:exported="true"
            android:enabled="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
                <category android:name="android.accessibilityservice.category.FEEDBACK_GENERIC" />
            </intent-filter>
            <meta-data android:name="android.accessibilityservice" android:resource="@xml/aware_accessibility_config" />
        </service>

        <service android:name="com.aware.plugin.app2016.Plugin" android:exported="true" />
        <service android:name="com.aware.plugin.app2016.ActivityRecognitionService" android:exported="true" />
        <service android:name="com.aware.plugin.app2016.SensorDataService" android:exported="true" />
        <service android:name="com.aware.plugin.app2016.Algorithm" android:exported="true" />
        <provider android:name="com.aware.plugin.app2016.Provider"
            android:authorities="${applicationId}.provider.acpunlock"
            android:exported="true"
            android:readPermission="com.aware.READ_CONTEXT_DATA"
            android:writePermission="com.aware.WRITE_CONTEXT_DATA"/>

    </application>

</manifest>
